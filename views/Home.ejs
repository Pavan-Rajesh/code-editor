<body>

    <nav>
        <ul>
            <li>
                <img src="./images/favicon.ico" alt="logo" class="company-logo">
                <span class="company-name">CodeCraft</span>
            </li>

        </ul>
        <ul>
            <li onclick="window.location.href='/login'">
                Login
            </li>
            <li onclick="window.location.href='/register'">
                signup
            </li>
            <li onclick="window.location.href='/blogs'">
                viewBlogs
            </li>
            <li id="viewmycodes" onclick="window.location.href='/usercodes'">
                view My codes
            </li>
        </ul>
    </nav>

    <div class="main-home-body">
        <div class="main-title">
            <div class="main-title-heading">
                Code Craft
            </div>
            <div class="main-title-caption">Craft your code, effortlessly.</div>
        </div>
        <img src="../images/sponge-bob.png " class="sponge-bob">
    </div>

    <div class="testimonials">

        <div class="card many-themes">
            <div class="card-title">Many Themes</div>
            <img src="../images/themesmodified-removebg-preview.png" class="themes-image" alt="">
        </div>
        <div class="card many-themes">
            <div class="card-title">Many languages</div>
            <img src="../images\languagesimage.png" class="languages-image" alt="">
        </div>
        <div class="card many-themes">
            <div class="card-title">Many options</div>
            <img src="../images/options-ver2.png" class="options-image" alt="">
        </div>
    </div>


    <div class="looking-for">
        <div class="looking-text">The code Editor you are looking For </div>
    </div>
    <div class="image-and-caption">
        <div class="image-caption">Write Your code Seamlessly</div>
        <img src="../images/codeEditor-removebg-preview.png" class="codeEditor">
    </div>

    <div class="image-and-caption c2">
        <img src="../images/codeEditor-removebg-preview.png" class="codeEditor">
        <div class="image-caption">Share Your Work</div>

    </div>
    <div class="image-and-caption">

        <div class="image-caption">Code, compile, conquer</div>
        <img src="../images/flag.png" class="codeEditor">
    </div>

    <footer>

        <div class="footer-left">
            <div class="footer-group-2">
                <div class="footer-group">
                    <div class="footer-title"> signup for A NewsLetter</div>
                </div>
                <div class="email-container">
                    <label id="email-label" for="email">Email:</label>
                    <input type="email" id="email" placeholder="abc@gmail.com">
                </div>
            </div>
        </div>
        <div class="footer-right">
            <ul>
                <div class="jump-heading">Jump To</div>
                <li id="editor">Go - To Editor</li>
                <li id="blog">Go - To Blog</li>
            </ul>
        </div>
    </footer>
    </footer>
