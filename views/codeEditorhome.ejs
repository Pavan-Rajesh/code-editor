                        <option value="clouds">Clouds</option>
                        <option value="xcode">xcode</option>
                        <option value="clouds">Clouds</option>
                        <option value="monokai">monokai</option>
                        <option value="clouds">Clouds</option>

                    </select>
                </div>

                <div class='font-size'>
                    <label for="font-size">Font-size</label>
                    <input type="number" id="font-size">
                    <div> <button type="button" id="configure">Configure</button></div>
                </div>
            </div>
            <!-- ---------------------------------------- -->
            <div class="compile-button">
                <button id="compile">compile</button>
                <button id="save">save</button>
                <button id="logout">logout</button>
            </div>

        </div>
    </div>



    <div id="question"></div>
    <div class="editor-markdown">
        <div class="editor-container">
            <div id="editor">
                <%=data.code%>
            </div>
        </div>
        <div class="markdown-container">

            <div class="markdown-controls">
                <h3>MarkDown</h3>

            </div>
            <div id="markdown">
                <textarea name="markdown-text" id="markdown-text"><%=data.markDown%></textarea>
                <div id="output-markdown"></div>
            </div>
        </div>

    </div>
