    <div class="editor-main-header">
        <div class="editor-title">
            Craft your code here!
        </div>
        <div class="options">
            <div>
                <label for="language">Choose a Language</label>
                <select id="language" name="language">
                    <option value="kotlin">kotlin</option>
                    <option value="c_cpp">C++</option>
                    <option value="python">Python</option>
                    <option value="java">java</option>
                    <option value="sql">sql</option>
                    <option value="golang">golang</option>
                    <option value="csharp">c#</option>
                    <option value="objectivec">objc</option>
                    <option value="swift">swift</option>
                    <option value="rust">rust</option>
                    <option value="php">php</option>
                </select>
            </div>
            <div class="code-name">
                Name of the code: <input value="<%=data.name%>" type="text" name="codeName" id="codeName">
            </div>
            <!-- ------------------------------------------>
            <div id="settings-toggler">Settings</div>
            <div id="settings">

                <div class="theme">
                    <label for="theme">select a setTheme</label>
                    <select id="theme" name="theme">

